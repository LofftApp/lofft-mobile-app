{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      // Components
      "@Components/*": ["./components/*"],
      "@Banners/*": ["./components/Banners/*"],
      "@Bars/*": ["./components/Bars/*"],
      "@Buttons/*": ["./components/Buttons/*"],
      "@Calendar/*": ["./components/Calendar/*"],
      "@Cards/*": ["./components/Cards/*"],
      "@Charts": ["./components/Charts/*"],
      "@Containers/*": ["./components/Containers/*"],
      "@Forms/*": ["./components/Forms/*"],
      "@Helpers/*": ["./components/HelperFunctions/*"],
      "@Icons/*": ["./components/Icons/*"],
      "@InputFields/*": ["./components/InputFields/*"],
      "@ScreenComponents/*": ["./components/ScreenComponents/*"],
      "@Profile/*": ["./components/ProfileSection/*"],
      // Screens
      // Assets
      "@Assets/*": ["./assets/*"],
      // StyleSheets
      "@StyleSheets/*": ["./StyleSheets/*"]
    }
  },
  "include": ["src"]
}
